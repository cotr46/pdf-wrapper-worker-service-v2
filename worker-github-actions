name: Deploy Document Processing Worker

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]

env:
  PROJECT_ID: bni-prod-dma-bnimove-ai
  REGION: asia-southeast2
  SERVICE_NAME: document-processing-worker
  IMAGE_NAME: document-processing-worker
  REPOSITORY: document-processing

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: Install dependencies
      run: |
        pip install -r requirements.txt

    - name: Run tests
      run: |
        python -c "import worker; print('Worker imports successfully')"
        python -c "import pdf_processor; print('PDF processor imports successfully')"

  build-and-deploy:
    needs: test
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'

    permissions:
      contents: read
      id-token: write

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Authenticate to Google Cloud
      uses: google-github-actions/auth@v1
      with:
        workload_identity_provider: ${{ secrets.WIF_PROVIDER }}
        service_account: ${{ secrets.WIF_SERVICE_ACCOUNT }}

    - name: Set up Cloud SDK
      uses: google-github-actions/setup-gcloud@v1

    - name: Configure Docker for Artifact Registry
      run: |
        gcloud auth configure-docker $REGION-docker.pkg.dev

    - name: Build and Push using Cloud Build
      run: |
        gcloud builds submit . \
          --config=cloudbuild.yaml \
          --substitutions=_IMAGE_NAME=$IMAGE_NAME,_IMAGE_TAG=$GITHUB_SHA,_REGION=$REGION,_REPOSITORY=$REPOSITORY,_SERVICE_NAME=$SERVICE_NAME \
          --timeout=1200s

    - name: Verify deployment
      run: |
        gcloud run services describe $SERVICE_NAME \
          --region=$REGION \
          --format="value(status.url)"

  deploy-staging:
    needs: test
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/develop'

    permissions:
      contents: read
      id-token: write

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Authenticate to Google Cloud
      uses: google-github-actions/auth@v1
      with:
        workload_identity_provider: ${{ secrets.WIF_PROVIDER }}
        service_account: ${{ secrets.WIF_SERVICE_ACCOUNT }}

    - name: Set up Cloud SDK
      uses: google-github-actions/setup-gcloud@v1

    - name: Configure Docker for Artifact Registry
      run: |
        gcloud auth configure-docker $REGION-docker.pkg.dev

    - name: Deploy to staging
      run: |
        gcloud builds submit . \
          --config=cloudbuild.yaml \
          --substitutions=_IMAGE_NAME=$IMAGE_NAME,_IMAGE_TAG=staging-$GITHUB_SHA,_REGION=$REGION,_REPOSITORY=$REPOSITORY,_SERVICE_NAME=$SERVICE_NAME-staging \
          --timeout=1200s
